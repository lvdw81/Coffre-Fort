<Window x:Class="coffre_fort2.Views.ChoixFormatImportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choisir le format d'importation" Height="200" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid Margin="20">
		<StackPanel VerticalAlignment="Center">
			<TextBlock Text="Choisissez le format d'importation" Margin="0 0 0 10" HorizontalAlignment="Center"/>
			<Button Content="Importer en CSV" Width="150" Click="ImporterCsv_Click" Margin="0 5"/>
			<Button Content="Importer en XML" Width="150" Click="ImporterXml_Click" Margin="0 5"/>
		</StackPanel>
	</Grid>
</Window>
