<Window x:Class="coffre_fort2.Views.AccueilView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bienvenue" Height="300" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#f4f4f4" WindowStyle="SingleBorderWindow" AllowsTransparency="False">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005a9e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryRoundedButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#E5E5E5"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#CFCFCF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Padding="20" Margin="10">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
                <TextBlock Text="Bienvenue"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0 0 0 20"
                           Foreground="#333"
                           TextAlignment="Center"/>
                <Button x:Name="ConnexionButton"
                        Content="Connexion"
                        Style="{StaticResource RoundedButtonStyle}"/>
                <Button x:Name="CreationButton"
                        Content="Creer un compte"
                        Style="{StaticResource SecondaryRoundedButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
