<Window x:Class="coffre_fort2.Views.ChoixFormatImportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choisir le format d'importation"
        Height="250" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f4f4f4"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Style de bouton moderne et arrondi -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005a9e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="10" Padding="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Choisissez le format d'importation"
                       Margin="0 0 0 15"
                       HorizontalAlignment="Center"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="#333"/>

            <Button Content="Importer en CSV"
                    Click="ImporterCsv_Click"
                    Style="{StaticResource RoundedButtonStyle}"/>

            <Button Content="Importer en XML"
                    Click="ImporterXml_Click"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </StackPanel>
    </Border>
</Window>
