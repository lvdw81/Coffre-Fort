<Window x:Class="coffre_fort2.Views.A2FView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verification 2FA"
        Height="250" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#f4f4f4"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False">

	<Window.Resources>
		<Style x:Key="RoundedButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="#0078D7"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Height" Value="40"/>
			<Setter Property="Margin" Value="0 0 0 10"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#005a9e"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="SecondaryRoundedButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
			<Setter Property="Background" Value="#E5E5E5"/>
			<Setter Property="Foreground" Value="#333"/>
			<Setter Property="Margin" Value="0"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#CFCFCF"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Border Background="White" CornerRadius="12" Padding="20" Margin="10">
		<Grid>
			<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="240">
				<TextBlock Text="Code de confirmation"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#333"
                           Margin="0 0 0 10"
                           TextAlignment="Center"/>
				<TextBox Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}"
                         Height="35"
                         Margin="0 0 0 10"
                         FontSize="14"/>
				<Button Content="Valider"
                        Command="{Binding VerifierCodeCommande}"
                        Style="{StaticResource RoundedButtonStyle}"/>
				<TextBlock Text="{Binding Message}"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           Margin="0 10 0 0"
                           TextAlignment="Center"/>
			</StackPanel>
		</Grid>
	</Border>
</Window>
