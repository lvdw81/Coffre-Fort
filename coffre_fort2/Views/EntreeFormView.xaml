<Window x:Class="coffre_fort2.Views.EntreeFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:coffre_fort2.Converters"
        Title="Entree" Height="420" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#f4f4f4"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Style TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Style CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 10 0 10"/>
        </Style>

        <!-- Style bouton -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="0 10 0 0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005a9e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="10" Padding="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Nom -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0 0 0 10">
                <TextBlock Text="Nom" FontWeight="SemiBold" Margin="0 0 0 4"/>
                <TextBox x:Name="NomBox" Height="30" Text="{Binding Entree.NomApplication, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Identifiant -->
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0 0 0 10">
                <TextBlock Text="Identifiant" FontWeight="SemiBold" Margin="0 0 0 4"/>
                <TextBox x:Name="IdentifiantBox" Height="30" Text="{Binding Entree.Identifiant, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Mot de passe -->
            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0 0 0 10">
                <TextBlock Text="Mot de passe" FontWeight="SemiBold" Margin="0 0 0 4"/>
                <TextBox x:Name="MotDePasseBox" Height="30" Text="{Binding Entree.MotDePasse, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Activer les tags -->
            <CheckBox x:Name="ActiverTagsBox"
                      Content="Activer les tags"
                      Grid.Row="3"
                      IsChecked="{Binding TagsActifs}"/>

            <!-- Champ tags -->
            <StackPanel Grid.Row="4" Orientation="Vertical"
                        Visibility="{Binding TagsActifs, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="Tags (separes par des virgules)" FontWeight="SemiBold" Margin="0 0 0 4"/>
                <TextBox x:Name="TagsBox" Height="30" Text="{Binding TagsTexte}"/>
            </StackPanel>

            <!-- Bouton Valider -->
            <Button Grid.Row="5"
                    Content="Valider"
                    HorizontalAlignment="Right"
                    Click="Valider_Click"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
    </Border>
</Window>
