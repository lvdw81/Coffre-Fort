<Window x:Class="coffre_fort2.Views.VoirMotsDePassePartagesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mots de passe partages"
        Height="450" Width="700"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#f4f4f4"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Style moderne pour ListView -->
        <Style TargetType="ListView">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="10" Padding="20" Margin="20">
        <ListView ItemsSource="{Binding MotsDePassePartages}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding NomApplication}" Width="150"/>
                    <GridViewColumn Header="Identifiant" DisplayMemberBinding="{Binding Identifiant}" Width="150"/>
                    <GridViewColumn Header="Mot de passe" DisplayMemberBinding="{Binding MotDePasse}" Width="150"/>
                    <GridViewColumn Header="Tags" DisplayMemberBinding="{Binding TagsAffiche}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Border>
</Window>
