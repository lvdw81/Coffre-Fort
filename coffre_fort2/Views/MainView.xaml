<Window x:Class="coffre_fort2.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:coffre_fort2.Converters"
        Title="Coffre fort" Height="500" Width="1000"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#f4f4f4" WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <local:BoolToTextConverter x:Key="BoolToEyeConverter"/>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0 0 10 5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005a9e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="ListViewMotsDePasse"
                  ItemsSource="{Binding Entrees}"
                  SelectedItem="{Binding EntreeSelectionnee}"
                  Margin="0 10 0 10"
                  GridViewColumnHeader.Click="GridViewColumnHeader_Click">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tags" DisplayMemberBinding="{Binding TagsAffiche}" Width="110"/>
                    <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding NomApplication}" Width="110"/>
                    <GridViewColumn Header="Identifiant" DisplayMemberBinding="{Binding Identifiant}" Width="110"/>

                    <GridViewColumn Header="Mot de passe" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding MotDePasseVisible}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Consulter" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding AfficherMotDePasse, Converter={StaticResource BoolToEyeConverter}}"
                                        Width="95"
                                        Background="#b1b1b1"
                                        Style="{StaticResource RoundedButtonStyle}"
                                        Command="{Binding DataContext.ToggleMotDePasseCommande, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Presse-papier -->
                    <GridViewColumn Header="Presse-papier" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Copier Identifiant"
                                            Width="130"
                                            Background="#ffa200"
                                            Style="{StaticResource RoundedButtonStyle}"
                                            Command="{Binding DataContext.CopierIdentifiantCommande, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="Copier Password"
                                            Width="130"
                                            Background="#ff7800"
                                            Style="{StaticResource RoundedButtonStyle}"
                                            Command="{Binding DataContext.CopierMotDePasseCommande, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Ajouter" Width="100" Command="{Binding AjouterCommande}" Style="{StaticResource RoundedButtonStyle}" Background="#00FF00"/>
            <Button Content="Modifier" Width="100" Command="{Binding ModifierCommande}" Style="{StaticResource RoundedButtonStyle}" Background="#0000FF"/>
            <Button Content="Supprimer" Width="100" Command="{Binding SupprimerCommande}" Style="{StaticResource RoundedButtonStyle}" Background="#FF0000"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="1">
            <Button Content="Exporter" Width="100" Command="{Binding ExporterCommande}" Style="{StaticResource RoundedButtonStyle}"/>
            <Button Content="Importer" Width="100" Command="{Binding ImporterCommande}" Style="{StaticResource RoundedButtonStyle}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
            <Button Content="Partager"
                Width="100" Height="30"
                Command="{Binding OuvrirFenetrePartageCommande}"
                CommandParameter="{Binding EntreeSelectionnee}"
                Style="{StaticResource RoundedButtonStyle}"/>

            <Button Content="Voir partages"
                Width="120"
                Command="{Binding ViewSharedPasswordsCommand}"
                Style="{StaticResource RoundedButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
